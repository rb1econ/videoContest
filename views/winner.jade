extends layout

block content
  div.container
    nav.navbar.navbar-default
          .container-fluid
            // Brand and toggle get grouped for better mobile display
            .navbar-header
              button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='/') Yoo-T00B?
            // Collect the nav links, forms, and other content for toggling
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              ul.nav.navbar-nav
                li
                  a(href='/submit') Submit a Video
                li
                  a(href='/viewsub') View Submissions
                li.active
                  a(href='/winner') 
                    | See the Winner
                    span.sr-only (current)
      h1 #{title}
    p Welcome to #{title}
    //- -console.log(aSubmission);
    -if(aSubmission.length===1){
        div.row
            -var val = aSubmission[0];
              div.col-sm-6
                -var embedable = val.youtubeVideo.replace('watch?v=', 'embed/')
                iframe(src=embedable, frameborder="0", allowfullscreen='')
                ul
                  li Creator: <strong>#{val.subName}</strong>
                  li Title: <em>#{val.title}</em>
                  li Description: #{val.describe}
                  li Winning number of votes: #{val.vote} 
    -}else{
          p There is no winner just yet, check back soon!
    -}
    
